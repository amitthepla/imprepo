<style type="text/css">
  body {
    overflow: hidden;
    background: #fff;
  }
</style>
<div class="row contact_row signin-page" style="background: #FFF">
    <div class="col-md-5 contact_div wrapper">
      <div id="loginbox" class="mainbox col-md-12"> 
          <div class="col-md-2"></div>
          <div class="above_login_form col-md-8">
             <a href="/">
               <div class="w-logo"></div>
             </a>
             <div class="desc_sign">
               All of your Lead Management Activities in one place
             </div>
          </div>   
          <div class="col-md-2 padrht">
            <!-- <a href="/users/sign_up" class="sign_up_cta">Signup</a>  -->
          </div> 
          <div class="cb"></div>                 
          <div class="" >
            <div class="" >
                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html=>{:class => "form"}) do |f| %>
                  <h1>Sign in to your Wakeupsales account</h1>
                  <div style="margin-bottom: 25px" class="inpfld">
                    <%= f.email_field :email, :required => true, :class=>"form-control", :placeholder=>"Email" , :style=>"height:40px;font-size: 17px;" %>
                  </div>
                  <div style="margin-bottom: 15px" class="inpfld">
                      <%= f.password_field :password, :required => true, :class=>"form-control", :placeholder=>"Password", :style=>"height:40px;font-size: 17px;" %>
                  </div>
                  <div class="inpfld">
                    <div class="checkbox">
                      <% if devise_mapping.rememberable? -%>
                        <div class="col-md-5">
                          <div class="fl"><%= f.check_box :remember_me, style: "width: 20px;" %></div>
                          <div class="fl">Remember me</div>
                          <div class="cb"></div>
                        </div>
                        <!-- Remember me  <span>&nbsp;&nbsp;&nbsp;<a>Can't access your account?</a></span> -->
                        <div class="col-md-7 can-not-access">
                          <%= link_to " Can't access your account?", new_password_path(resource_name) %>
                        </div>
                        <div class="cb"></div>
                       
                      <% end -%>
                    </div>
                  </div>
                  <div style="margin-top:10px;text-align:center;" class="continue-btn">
                      <!-- Button -->
                      <div class="controls" >
                        <%=f.submit "Let's Start Working"%>
                        <i class="fa fa-arrow-right" aria-hidden="true"></i>
                  </div>
                  <div style="text-align:center;margin: 20px;">- OR -</div>
                  <div style="text-align:center;">
                      <input class="vi-google-signin" onclick="social_authenticate('/auth/google_oauth2')" type="button" title="Sign in using Google Account"/>
                      <input class="vi-linkedin-signin" onclick="social_authenticate('/auth/linkedin')" type="button" title="Sign in using Linkedin Account"/>
                  </div> 
                <% end %>
              </div>                     
          </div>  
          <p class="create">New to WakeUpSales? 
            <a href="/users/sign-up" id="pass_login1" ><strong>&nbsp;Sign up completely FREE</strong></a>
          </p>
      </div>
    </div>
  
  <div class="w_logo_si_signin">
    
  </div>
</div>
<%=stylesheet_link_tag "home"%>
<script type="text/javascript">
  function social_authenticate(auth_url){
      window.location.href = auth_url;
    }
</script>
