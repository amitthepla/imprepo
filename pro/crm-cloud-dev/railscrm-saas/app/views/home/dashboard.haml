            %li
              - lost_chart = @lost_deals != 0 && @total_leads != 0
              %span.chart.lost-chart.load-percent{"data-percent" => "#{lost_chart ? (@lost_deals.to_f / @total_leads.to_f * 100.0).round : 0}"}
