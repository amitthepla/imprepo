:javascript
  function subscribe_news_letter() {
    try{
      email = $("#subscribe_email").val();
      if(email == "" ){
        alert("Please enter your email to subscribe.");
        return false;
      }
      var atpos = email.indexOf("@");
      var dotpos = email.lastIndexOf(".");
      if (email != '' && (atpos < 1 || dotpos < atpos + 2 || dotpos + 2 >= email.length)) {
        alert('Please enter a valid email address.')
        return false;
      }
      $(".news_letter_form").html("<span style='color:#ddd'>Loading...</span>");
      var posting = $.post( "http://blog.wakeupsales.com/auto_subscription_blog.php", { email: email, domain: "cloud" });
      posting.always(function( data ) {
        $(".news_letter_form").html("<div class='new_letter_success'>Cheers! Please, check your Inbox to confirm your subscription.</div>");
      });
    }
    catch(err) {
      $("#subscribe_email").html(err.message);
    }
  }
  







  
  
    