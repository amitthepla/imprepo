<div class="panel panel-default col-xs-6 col-xs-offset-3" style="margin-top:5%;">
  <div class="panel-heading"><h3>Reset Password</h3></div>
  <div class="panel-body">
    <%= form_tag password_resets_path, :method => :post do %>
      <div class="form-group col-xs-12 col-sm-6">
        <%= label_tag :email %><br/>
        <%= text_field_tag :email, "", class: "form-control"%><br>
        <%= submit_tag "Reset my password!" , class: "btn-primary btn-sm"%>
      </div>
    <% end %>
  </div>
</div>
