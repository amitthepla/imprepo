<h1>New Patient</h1>
<% if @contact.errors.any? %>
    <div id="error_explanation">
        <h2>
            <%= pluralize(@contact.errors.count, "error")%>
            prohibited this Doc from being saved:
        </h2>
        <p>There were problems with the following fields:</p>
        <ul>
        <% @contact.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
        </ul>
    </div>

<% end %>
<%= form_for(@contact, :html => {:class => ""} ) do |f| %>
  <div class="input-wrapper">
    <%= f.label :first_name,"First Name"  %>
    <%= f.text_field :first_name %>
  </div>
  
  <div class="input-wrapper">
    <%= f.label :last_name,"Last Name"  %>
    <%= f.text_field :last_name %>
  </div>

  <div class="input-wrapper">
    <%= f.label :date_of_birth,"Date of Birth"  %>
    <%= f.text_field :date_of_birth %>
  </div>
  
  <div class="input-wrapper">
    <%= f.label :phone,"Phone"  %>
    <%= f.text_field :phone %>
  </div>

  <div class="input-wrapper">
    <%= f.label :alt_phone,"Alt Phone"  %>
    <%= f.text_field :alt_phone %>
  </div>

  <div class="input-wrapper">
    <%= f.label :email,"Email"  %>
    <%= f.text_field :email %>
  </div>

  <div class="input-wrapper">
    <%= f.label :email,"Alt Email"  %>
    <%= f.text_field :email %>
  </div>

  <div class="input-wrapper">
    <%= f.label :address,"Address"  %>
    <%= f.text_field :address %>
  </div>

  <div class="input-wrapper">
    <%= f.label :city,"City"  %>
    <%= f.text_field :city %>
  </div>

  <div class="input-wrapper">
    <%= f.label :state,"State"  %>
    <%= f.text_field :state %>
  </div>

  <div class="input-wrapper">
    <%= f.label :zip,"Zip"  %>
    <%= f.text_field :zip %>
  </div>

  <div class="input-wrapper">
    <%= f.label :external_record_id,"Chart #"  %>
    <%= f.text_field :external_record_id %>
  </div>

  <p><%= f.submit "Save Patient", :class => "btn" %></p>

<% end %>