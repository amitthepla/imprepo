<p><%= link_to 'Add New Patient', new_business_contact_path, {:class => 'btn'} %></p>

<table class="table table-bordered">
      <thead>
        <tr>
          <th>Gender</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>E-mail</th>
          <th>Phone</th>
          <th>Coordinator</th>
          <th>Leads</th>
          <th>Consults</th>
        </tr>
      </thead>
      <tbody>
       <% @contacts.each do |contact| %>
        <tr>
          <th scope="row"><%= link_to contact.gender, contact if contact.gender %></th>
          <td><%= link_to contact.first_name, contact %></td>
          <td><%= link_to contact.last_name, contact %></td>
          <td><%= link_to contact.email, contact %></td>
          <td><%= link_to contact.phone, contact if contact.phone %></td>
          <td><%= link_to contact.account_rep.full_name, contact if contact.account_rep %></td>
          <td><%= link_to contact.leads.count, contact %></td>
          <td><%= link_to contact.events.count, contact %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <nav aria-label="Page navigation">
      <ul class="pagination">
        <%= will_paginate @contacts, renderer: BootstrapPaginationHelper::LinkRenderer %>
      </ul>
    </nav>
    <br/>
