<div class="modal fade" id="booked_consult_<%= lead.id %>">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4>Book Consult</h4>
      </div>
      <div class="modal-body">
        <p class="text-primary">Is <%= lead.name %> ready to book their
          consultation?</p>
        <%= form_tag book_consult_path, :method => 'post', class: "form-inline no-margin", id: "booked-consult-form_#{lead.id}", remote: true  do %>

            <label class=" control-label">Consultation Date <br><small><i>mm/dd/yyyy</i></small></label>
            <br>
            <div class="input-group col-md-4">
              <input name="consultation_date" type="text" value="" class="datepicker form-control" style="position: relative; z-index: 100000;">
              <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
            </div>
            <br>
            <br>
            <label class=" control-label">Consultation Cost</label>
            <br>
            <div class="input-group col-md-4">
              <span class="input-group-addon">$</span>
              <input type="text" name="consult_cost" class="form-control" >
              <span class="input-group-addon">.00</span>
            </div>
            <%= hidden_field_tag "page", @stage_leads.current_page %>
            <%= hidden_field_tag "stage_id", @stage.stage_id %>
            <%= hidden_field_tag "lead_id", lead.id %>

            </div>
            <div class="modal-footer">

            <%= submit_tag "Book Consult", class: "btn btn-xs btn-success should-load", :onclick => "$('#booked-consult-form_#{lead.id}').submit(); return false;" %>

        <% end %>
        <button class="btn btn-xs btn-danger" data-dismiss="modal" aria-hidden="true">Cancel</button>
        </div>
        </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
