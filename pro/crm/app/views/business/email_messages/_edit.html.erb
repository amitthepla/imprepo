<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h3>Edit Email Message</h3>
</div>
<%= form_for(@email_message, :html => {:method => 'patch', remote: true, class: "form-group"})  do |f| %>
  <div class="modal-body">
    <label class="h4 control-label">Message Name</label><br/>
    <div class="input-group col-md-10">
      <%= f.text_field :name, class: " form-control"  %>
    </div>
    <label class="h4 control-label">Message Body</label><br/>
    <div class="input-group col-md-10">
      <h6>Hello {patient's name},</h6>
      <%= f.text_area :message,id:"#{@email_message.id}" ,class: " form-control tinymce email", rows: 10  %>
    </div>
    <h6>Sincerely,</h6>
    <h6>{sender's name}</h6>
  </div>
  <div class="modal-footer">
    <%= f.submit "Update", class: "btn btn-xs btn-success should-load" %>
    <button class="btn btn-xs btn-danger"  data-dismiss="modal" aria-hidden="true">Cancel</button>
  </div>
<% end %>
