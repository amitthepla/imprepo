<table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>
  <tbody>
    <%@email_messages.each do |msg|%>
        <tr>
          <td><%= msg.name.titleize%></td>
          <td><a href="<%=business_email_message_path(msg)%>" role="button" data-toggle="modal" data-target="#message_modal" data-remote="true" class="text-info"><i class="fa fa-search" aria-hidden="true"></i> View</a></td>
          <td><a href="<%=edit_business_email_message_path(msg)%>" role="button" data-toggle="modal" data-target="#message_modal" data-remote="true" class="text-warning"><i class="fa fa-pencil" aria-hidden="true"></i> Edit</a></td>
          <td><%=link_to business_email_message_path(msg), data: {:confirm => 'Are you sure?'}, :method => :delete, class:"text-danger", remote:"true" do %> <i class="fa fa-trash-o" aria-hidden="true"></i> Delete<%end%></td>
        </tr>
    <%end%>
  </tbody>
</table>

<div class="modal fade" id="message_modal">
  <div class="modal-lg">
    <div class="modal-content" id="message-form">

    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
