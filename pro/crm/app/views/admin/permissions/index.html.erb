<h1>All Roles</h1>
<%= link_to 'Add New Role', new_business_role_path, class: 'btn btn-default' %>

<div class="card">
  <table width="80%">
    <thead>
    <tr>
      <td>Role Name</td>
      <td>Visibility</td>
    </tr>
    </thead>
    <% @roles.each do |role| %>
        <tbody>
        <tr>
          <td width="60%">
            <div style="padding: 5px 20px 5px 5px"><%= link_to role.name, admin_edit_permissions_path(role) %></div>
          </td>
          <td width="40%">
            <div style="padding: 5px 20px 5px 5px;"><%= role.visibility %></div>
          </td>
        </tr>
        </tbody>
    <% end %>
  </table>
</div>