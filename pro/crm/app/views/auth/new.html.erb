<div class="login-wrapper">
  <div class="text-center">
    <h2 class="fadeInUp animation-delay8" style="font-weight:bold">
      <span class="text-primary">Conversion</span> <span style="color:#ccc; text-shadow:0 1px #fff ">Doctor</span>
    </h2>
  </div>
  <div class="login-widget animation-delay1">
    <div class="panel panel-default">
      <div class="panel-heading clearfix">
        <div class="pull-left">
          <i class="fa fa-lock fa-lg"></i> Login
        </div>

        <div class="pull-right">
          <span style="font-size:11px;">Don't have any account?</span>
          <a class="btn btn-default btn-xs login-link" href="/sign_up" style="margin-top:-2px;"><i class="fa fa-plus-circle"></i>
            Sign up</a>
        </div>
      </div>
      <div class="panel-body">
        <% flash.each do |name, msg| %>
            <% if name.to_s == 'error' %>
                <div class="alert alert-danger" role="alert"><%= msg %>
                  <!--<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>-->
                </div>
            <% elsif name.to_s == 'alert' %>
                <div class="alert alert-warning" role="alert"><%= msg %>
                  <!--<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>-->
                </div>
            <% elsif name.to_s == 'notice' %>
                <div class="alert alert-info" role="alert"><%= msg %>
                  <!--<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>-->
                </div>
            <% end %>
        <% end %>

        <%= form_tag login_path({class: 'form-login'}) do %>
            <div class="form-group">
              <%= label :email, 'Email' %>
              <%= text_field_tag :email, params[:email], placeholder: 'email@example.com', class: 'form-control input-sm bounceIn animation-delay2' %>
            </div>

            <div class="form-group">
              <%= label :password, 'Password' %><br>
              <input type="password" id="password" name="password" placeholder="Password" class="form-control input-sm bounceIn animation-delay4">
            </div>

            <hr/>
            <center><%= link_to 'Forgot Password?', new_password_reset_path %></center>
            <%= submit_tag 'Sign In', class: 'btn btn-success btn-sm bounceIn animation-delay5 login-link pull-right' %>
        <% end %>
      </div>
    </div><!-- /panel -->
  </div><!-- /login-widget -->
</div><!-- /login-wrapper -->
