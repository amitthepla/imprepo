<br/>
<div class="container">
    <div class="col-md-4"></div>
    <div class="col-md-4">
         <div class="row myborder">
            <h4 style="color: #7EB59E; margin: initial; margin-bottom: 10px;">Resend confirmation instructions</h4><hr>
            <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
            	  <%= devise_error_messages! %>
              <div class="input-group margin-bottom-20">
                  <span class="input-group-addon"><i class="glyphicon glyphicon-envelope mycolor"></i></span>
                  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email",value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
              </div>                     
              <div class="row">
                  <div class="col-md-12">
                      <%= f.submit "Resend confirmation instructions", class: "btn-u pull-left"  %>                     
                  </div>

              </div>
            <%end%>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>