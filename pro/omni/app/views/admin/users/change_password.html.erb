<br/>
<div class="container">
    <div class="col-md-4"></div>
    <div class="col-md-4">
         <div class="row myborder">
            <h4 style="color: #7EB59E; margin: initial; margin-bottom: 10px;">Change Password</h4><hr>
            <%= form_for current_user, :url => users_change_password_path, :html => { :method => :put } do |f| %>
	              <div class="input-group margin-bottom-20">
	                  <span class="input-group-addon"><i class="glyphicon glyphicon-lock mycolor"></i></span>
	                  <%= f.password_field :password, autofocus: true, class: "form-control", placeholder: "Password", :required => true%>
	              </div>
	              <div class="input-group margin-bottom-20">
	                  <span class="input-group-addon"><i class="glyphicon glyphicon-lock mycolor"></i></span>   
	                  <%= f.password_field :password_confirmation, autofocus: true, class: "form-control", placeholder: "Password Confirmation", :required => true%>
	              </div>        
	              <div class="row">
	                  <div class="col-md-12">
	                      <%= f.submit "Change password", class: "btn-u pull-left"  %>	                      
	                  </div>
	           <% end %>
              </div>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>
